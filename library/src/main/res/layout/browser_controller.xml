<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF6F6F6"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageButton
        android:id="@+id/browser_controller_back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_chevron_left_grey600_18dp" />

    <ImageButton
        android:id="@+id/browser_controller_forward"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_chevron_right_grey600_18dp" />

    <ImageButton
        android:id="@+id/browser_controller_refresh"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_refresh_grey600_18dp" />

    <ImageButton
        android:id="@+id/browser_share"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_share_grey600_18dp" />

    <ImageButton
        android:id="@+id/browser_controller_go"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_redo_grey600_18dp" />

</LinearLayout>