<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <uk.co.senab.photoview.PhotoView
        android:id="@+id/pager_item_gallery_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"/>

    <com.haoyue.app.library.progress.CircularProgressBar
        android:id="@+id/pager_item_gallery_loading_progress"
        android:layout_width="@dimen/common_loading_progress_size"
        android:layout_height="@dimen/common_loading_progress_size"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        android:indeterminateOnly="false"
        app:cpb_colors="@array/gplus_colors"/>

</RelativeLayout>